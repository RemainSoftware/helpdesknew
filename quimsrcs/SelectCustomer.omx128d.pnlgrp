          HELP='KL0101H/ENTERH'
          VARUPD=YES
          ACTION='ENTER'.

:KEYI     KEY=HELP
          HELP='KL0101H/HELPH'
          ACTION='HELP'.

:KEYI     KEY=PAGEUP
          HELP='KL0101H/PAGEH'
          ACTION='PAGEUP'.

:KEYI     KEY=PAGEDOWN
          HELP='KL0101H/PAGEH'
          ACTION='PAGEDOWN'.

